<div class="row">
  <div class="col-xl-10 offset-xl-1">
    <h1>Posts</h1>

    <%= link_to 'New Post', new_post_path, class: "btn btn-lg btn-primary" %>

    <table class="table mt-3">
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <h1><%= post.title %></h1>
              <p class="lead"><%= post.body %></p>
              <p><em>Posted&nbsp;<%= time_ago_in_words(post.created_at) %>&nbsp;ago.</em></p>
              <p>
                <%= link_to 'Show', post, class: "btn btn-link" %>
                <%= link_to 'Edit', edit_post_path(post), class: "btn btn-link" %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
