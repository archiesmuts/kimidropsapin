<!-- ====== Carousel ====== -->
<div id="carouselPostsIndex" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000">
  <ol class="carousel-indicators">
    <li data-target="#carouselPostsIndex" data-slide-to="0" class="active"></li>
    <li data-target="#carouselPostsIndex" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block img-fluid" src="https://s3.eu-central-1.amazonaws.com/kimis-blog-production/meal-plate-food-brooke-lark-sm.jpg" alt="Food on a plate">
        <!-- display on large > screens -->
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-4">
          Kimi Drops a Pin<%= fa_icon("map-pin", class: "map-pin") %>
        </h1>
        <h2 class="display-4">Hello World</h2>
        <p class="lead">
          This is the first draft. Just a reminder that as
          the owner of the blog you have to sign up first.
        </p>
        <ul class="list-inline">
          <li class="list-inline-item">Kimberley Smuts | </li>
          <li class="list-inline-item"><%= Time.now %></li>
        </ul>
      </div>
        <!-- display on extra small small screens only -->
      <div class="carousel-caption d-block d-md-none">
        <h1 class="display-4">
            Kimi Drops a Pin<%= fa_icon("map-pin", class: "map-pin") %>
        </h1>
        <ul class="list-inline">
          <li class="list-inline-item">Kimberley Smuts | </li>
          <li class="list-inline-item"><%= Time.now %></li>
        </ul>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="https://s3.eu-central-1.amazonaws.com/kimis-blog-production/meal-plate-salad-brooke-lark-sm.jpg" alt="Salad on a Plate">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-4">
          Kimi Drops a Pin<%= fa_icon("map-pin", class: "map-pin") %>
        </h1>
        <p class="lead">
          You can create, edit and delete posts only after you sign in with your
          email and password. No sign-in is required for viewing posts and leaving comments.
        </p>
      </div>
      <!-- display on extra small small screens only -->
      <div class="carousel-caption d-block d-md-none">
        <h1 class="display-4">
            Kimi Drops a Pin<%= fa_icon("map-pin", class: "map-pin") %>
        </h1>
        <ul class="list-inline">
          <li class="list-inline-item">Kimberley Smuts | </li>
          <li class="list-inline-item"><%= Time.now %></li>
        </ul>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselPostsIndex" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselPostsIndex" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->
