<h1 class="text-center text-info">All Posts</h1>

<% if user_signed_in? %>
<h4 class="text-center text-info">
  Displaying <%= pluralize(@posts.size, "posts") %>
</h4>
<div class="row">
    <%= render @posts %>
  </div>
  <% else %>
  <div class="row">
    <%= render @published_records %>
  </div>
  <div class="d-flex flex-column align-items-center my-3">
    <%== pagy_nav_bootstrap(@pagy) %>
    <div class="">
      <%== pagy_info(@pagy) %>
    </div>
  </div>
  <% end %>
