<div class="showcase">
  <section class="g-bg-cover g-bg-size-cover g-bg-white-gradient-opacity-v1--after" data-bg-img-src="https://s3.eu-central-1.amazonaws.com/kimis-blog-production/meal-plate-food-brooke-lark-sm.jpg">
    <!-- image size 1920h x 1080w  -->
    <!-- Photo by Brooke Lark on Unsplash  - meal plate salad - meal plate food -->
    <!-- Photo by Chinh Le Duc on Unsplash Herbs, turmeric, and spice on cutting board near wooden spoon and paper reading love -->
    <div class="container text-center g-pos-rel g-z-index-1 g-pb-50">
      <div class="row d-flex justify-content-center align-content-end flex-wrap g-min-height-500">
        <div class="col-lg-8 mt-auto">
          <div class="mb-5">
            <h1 class="g-color-white g-font-weight-600 g-mb-30">Posts to make your drool!</h1>
          </div>
          <p class="lead g-color-white-opacity-0_6">
            Hello Kimberley!
          </p>
          <% if user_signed_in? %>
            <%= link_to 'Create a New Post', new_post_path, class: "btn btn-lg btn-primary" %>
          <% end %>
        </p>
          <span class="g-color-white-opacity-0_7 g-font-weight-300 g-font-size-12">Kimberley Smuts</span>
          <span class="g-color-white-opacity-0_7 g-font-weight-700 mx-3">&#183;</span>
          <span class="g-color-white-opacity-0_7 g-font-weight-300 g-font-size-12"><%= Time.now %></span>
        </div>
      </div>
    </div>
  </section>

  <section class="g-bg-cover g-bg-size-cover g-bg-white-gradient-opacity-v1--after" data-bg-img-src="https://s3.eu-central-1.amazonaws.com/kimis-blog-production/meal-plate-salad-brooke-lark-sm.jpg">
    <!-- image size 1920h x 1080w  -->
    <!-- Photo by Brooke Lark on Unsplash  - meal plate salad - meal plate food -->
    <!-- Photo by Chinh Le Duc on Unsplash Herbs, turmeric, and spice on cutting board near wooden spoon and paper reading love -->
    <div class="container text-center g-pos-rel g-z-index-1 g-pb-50">
      <div class="row d-flex justify-content-center align-content-end flex-wrap g-min-height-500">
        <div class="col-lg-8 mt-auto">
          <div class="mb-5">
            <h1 class="g-color-white g-font-weight-600 g-mb-30">Good Food Made Great!!</h1>
          </div>
          <p class="lead g-color-white-opacity-0_6">
            You can create, edit and delete posts only after you sign in with your
            email and password. No sign-in is required for viewing posts and leaving comments.
          </p>
          <span class="g-color-white-opacity-0_7 g-font-weight-300 g-font-size-12">Kimberley Smuts</span>
          <span class="g-color-white-opacity-0_7 g-font-weight-700 mx-3">&#183;</span>
          <span class="g-color-white-opacity-0_7 g-font-weight-300 g-font-size-12"><%= Time.now %></span>
        </div>
      </div>
    </div>
  </section>
